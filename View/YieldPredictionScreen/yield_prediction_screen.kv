<YieldPredictionScreenView>
    name: 'yield prediction screen'
    MDBoxLayout:
        spacing: "20dp"
        padding: "20dp"
        orientation: "vertical"
        MDIconButton:
            icon: "arrow-left"
            on_release: root.switch_screen("home screen")
        MDLabel:
            text: "Yield Prediction"
            font_style: "Headline"
            adaptive_height: True
        MDBoxLayout:
            MDBoxLayout:
                adaptive_height: True
                spacing: "10dp"
                orientation: "vertical"
                pos_hint: {"center_y": .6}
                TextField:
                    id: text_field
                    radius: self.height / 2
                    theme_bg_color: "Custom"
                    font_size: "20sp"
                MDLabel:
                    id: description
                    adaptive_height: True
                    role: "medium"
                    halign: "center"
        MDBoxLayout:
            adaptive_height: True
            MDButton:
                id: prev_btn
                on_release:
                    root.item_index -= 1
                    root.set_input()
                MDButtonText:
                    text: "Previous"
            MDWidget:
            MDButton:
                id: next_btn
                on_release:
                    root.item_index += 1
                    root.set_input()
                MDButtonText:
                    id: next_btn_text
                    text: "Next"
